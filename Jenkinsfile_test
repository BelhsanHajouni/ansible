pipeline {
    agent any
    
    environment {
        VAULT_PASSWORD = credentials('ansible-vault-password')
    }

    tools {
        ansible 'Ansible'
    }

    stages {
        stage('Git Checkout') {
            steps {
                echo 'Pulling ... '
                git branch: 'main',
                url: 'https://github.com/jasminemansouri/ansible'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                withCredentials([string(credentialsId: 'ansible-vault-password', variable: 'VAULT_PASSWORD')]) {
                    sh 'ansible-playbook -i hosts.ini --vault-password-file <(echo $VAULT_PASSWORD) test.yml'
                }
            }
        }
    }
}
