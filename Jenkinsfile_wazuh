pipeline {
    agent any
    
    environment {
        VAULT_PASSWORD = credentials('ansible-vault-password')
    }

    tools {
        ansible 'Ansible'
    }

    stages {
        stage('Git Checkout') {
            steps {
                echo 'Pulling ... '
                git branch: 'main',
                url: 'https://github.com/jasminemansouri/ansible'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                
                withCredentials([string(credentialsId: 'ansible-vault-password', variable: 'VAULT_PASSWORD')]) {
                    sh '''
                    echo $VAULT_PASSWORD > vault_pass.txt
                    ansible-playbook -i hosts.ini wazuh-agent.yml --vault-password-file vault_pass.txt
                    '''


                }
            }
        }

    }
}
