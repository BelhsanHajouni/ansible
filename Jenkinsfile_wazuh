pipeline {
    agent any

    tools {
        ansible 'Ansible'
    }
    stages {
        stage('Git Checkout') {
            steps {
                echo 'Pulling ... '
                git branch: 'main',
                url: 'https://github.com/jasminemansouri/ansible'
            }
        }
        stage('config IP @') {
            steps {
                script {
                    // Run Wazuh installation with Docker
                    sh 'ansible-playbook -i wazuh.ini -e "ansible_role_path=./wazuh" wazuh.yml'
                }
            }
        }
       
    }
}
